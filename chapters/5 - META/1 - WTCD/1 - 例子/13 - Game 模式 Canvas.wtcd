WTCD 1.3
declare number x = 0
declare number y = 0
section init {
  canvasCreate::["a" 200 200]
} then goto main
section main {
  canvasClear::["a"]
  canvasPutImage::["a" "./image.png" x y]
  canvasOutput::["a"]
} then selection [
  choice "x += 50" $ { x += 50 return goto main }
  choice "x -= 50" $ { x -= 50 return goto main }
  choice "y += 50" $ { y += 50 return goto main }
  choice "y -= 50" $ { y -= 50 return goto main }
]
